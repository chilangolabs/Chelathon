<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCardProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12sp">

        <com.chilangolabs.modelonow.customwidgets.TextViewMontserrat
            android:id="@+id/itemTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bud Light"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:type="bold" />

        <com.chilangolabs.modelonow.customwidgets.TextViewMontserrat
            android:id="@+id/itemTxtDescrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="12 Pack â€¢ Botella importada 12 Oz"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/itemImgProduct"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="5dp"
            android:scaleType="centerInside"
            android:src="@mipmap/beer_stella" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.chilangolabs.modelonow.customwidgets.TextViewMontserrat
                android:id="@+id/itemTxtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:text="$140.00"
                android:textColor="@color/colorPrimary"
                app:type="bold" />

            <com.like.LikeButton
                android:id="@+id/itemBtnHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                app:icon_size="15dp"
                app:icon_type="heart"
                app:liked="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>